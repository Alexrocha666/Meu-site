body {
  font-family: Arial, sans-serif;
  text-align: center;
  background-color: #f4f4f9;
}

h1 {
  color: #333;
}

.container {
  margin: 20px auto;
  width: 70%;
}

video {
  margin-bottom: 20px;
  width: 100%;
  max-width: 640px;
}

.playlist button {
  padding: 10px 20px;
  margin: 5px;
  border: none;
  background-color: #007bff;
  color: white;
  cursor: pointer;
  border-radius: 5px;
}

.playlist button:hover {
  background-color: #0056b3;
}