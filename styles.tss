body {
  font-family: sans-serif;
  text-align: center;
  background-color: #222;
  color: white;
}

.slot-machine {
  display: flex;
  justify-content: center;
  margin: 20px 0;
}

.reel {
  background: #444;
  border: 2px solid #888;
  border-radius: 10px;
  width: 80px;
  height: 80px;
  font-size: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 10px;
}
